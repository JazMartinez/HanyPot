doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0; user-scalable=0;")
        title HanyPot
        link(rel="stylesheet" href="css/main.css")
        link(rel="stylesheet" href="css/slider-pro.min.css")
        link(rel="stylesheet" href="css/animsition.min.css")
        link(href="css/nouislider.min.css" rel="stylesheet")
        link(href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700&subset=latin,cyrillic' rel='stylesheet' type='text/css')
    body
        #wrapper.animsition

            //Header
            include _header

            //main content
            main
                block content

            //footer
            include _footer
            #modal-login.modal.fade(tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
                .modal-dialog
                    .modal-content
                        .modal-header
                            button.close(data-dismiss="modal" aria-label="close")
                                span(aria-hidden="true") закрыть
                            img(src="images/visitka/logo.png").modal-logo
                            p Самый быстрый способ начать разговаривать с девушкой. А также популярный сервис знакомств!
                        .modal-body
                            form
                                .form-group
                                    input(type="text" name="phone" placeholder="E-mail или Телефон" required="required").input-phone.form-control
                                .form-group
                                    input(type="email" name="password" placeholder="Пароль" required="required").form-control
                                button.form-control.btn Войти
                                .checkbox
                                    label
                                        input(type="checkbox")
                                        | Запомнить меня
                        .modal-footer
                            a(href="#") Забыли пароль?
                            a(href="#") Регистрация
        script(src="js/wNumb.js")
        script(src="js/jquery-1.11.0.min.js")
        script(src="js/animsition.min.js")
        script(src="js/bootstrap.min.js")
        script(src="js/jquery.sliderPro.min.js")
        script(src="js/plugins-scroll.js")
        script(src="js/nouislider.min.js")
        script(src="js/jquery.maskedinput.js")
        script(src="js/main.js")